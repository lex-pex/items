{% extends 'layout/main.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block canvas %}
<div class="row">
    <div class="col-8">

        <h2 class="text-center p-3">{{ title }}</h2>

        <form method="post" action="/posts/update" enctype="multipart/form-data">
            <input type="hidden" name="id" value="{{ post.id }}">
            <div class="form-group row">
                <label for="title" class="col-md-4 col-form-label text-md-right">Title</label>

                <div class="col-md-6">
                    <input id="title" type="text" class="form-control " name="title" value="{{ post.title }}" required autocomplete="title" autofocus>
                </div>
            </div>

            <div class="form-group row justify-content-center">
                <div class="col-md-6 offset-md-2">
                    <img src="{{ post.image ? post.image : '/upload/img/posts/empty.jpg' }}" width="100%" />
                </div>
            </div>
            <div class="form-group row">
                <label for="image" class="col-md-4 col-form-label text-md-right">Picture</label>
                <div class="col-md-6">
                    <input id="image" type="file" name="image" autocomplete="current-image"
                           class="btn btn-outline-primary btn-block is-invalid">
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-6 offset-md-4">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="image_del" id="image_del">
                        <label class="form-check-label" for="image_del">Delete Image</label>
                    </div>
                </div>
            </div>

            <div class="form-group row">
                <label for="content" class="col-md-4 col-form-label text-md-right">Content Text</label>
                <div class="col-md-6">
                    <textarea id="content" class="form-control" rows="6" name="content" required autocomplete="content">{{ post.content }}</textarea>
                </div>
            </div>

            <div class="form-group row">
                <label for="text" class="col-md-4 col-form-label text-md-right">Category:</label>
                <div class="col-md-6">
                    <select class="form-control custom-select" name="category_id">
                    {% for id, name in categories %}
                        <option {{ id == post.categoryId ? 'selected="selected"' : '' }} value="{{ id }}">{{ name }}</option>
                    {% endfor %}
                    </select>
                </div>
            </div>

            <div class="form-group row mb-0">
                <div class="col-md-6 offset-md-4">
                    <button type="submit" class="btn btn-primary">Send</button>
                </div>
            </div>

        </form>

    </div>
</div>

{% endblock %}



