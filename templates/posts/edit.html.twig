{% extends 'layout/main.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block canvas %}

    <h2 class="text-center p-3">{{ title }}</h2>

    <form method="post" action="/posts/store">

        <div class="form-group row">
            <label for="title" class="col-md-4 col-form-label text-md-right">Title</label>

            <div class="col-md-6">
                <input id="title" type="text" class="form-control " name="title" value="{{ post.title }}" required autocomplete="title" autofocus>
            </div>
        </div>

        <div class="form-group row">
            <label for="content" class="col-md-4 col-form-label text-md-right">Content Text</label>

            <div class="col-md-6">
                <textarea id="content" class="form-control " name="content" required autocomplete="content">{{ post.content }}</textarea>
            </div>
        </div>

        <div class="form-group row">
            <label for="text" class="col-md-4 col-form-label text-md-right">Category:</label>
            <div class="col-md-6">
                <select class="form-control custom-select" name="category_id">
                {% for id, name in categories %}
                    <option {{ id == post.categoryId ? 'selected="selected"' : '' }} value="{{ id }}">{{ name }}</option>
                {% endfor %}
                </select>
            </div>
        </div>

        <div class="form-group row mb-0">
            <div class="col-md-6 offset-md-4">
                <button type="submit" class="btn btn-primary">Send</button>
            </div>
        </div>

    </form>

{% endblock %}



