{% extends 'cats/main.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
<div class="container">

    <div class="my-card">

        <h2>{{ title }}</h2>

        <div style="text-align: left">

            {% for p in posts %}
                <p style="background:khaki;padding:5px">
                    - #{{ p.id }}: {{ p.title }}
                    <small>
                        | <a href="/categories/{{ c.id }}/edit"> Edit </a>
                        | <a href="#" onclick="event.preventDefault();
                                                 document.getElementById('delete-form-{{ p.id }}').submit();"> Del </a>
                        <form action="{{ path('post_delete') }}" method="post" id="delete-form-{{ p.id }}" style="display:none">
                            <input type="number" name="id" value="{{ p.id }}">
                            <input type="submit" value="Del">
                        </form>
                    </small>
                </p>
            {% endfor %}

        </div>

    </div>

</div>


{% endblock %}



